{% extends 'base.html.twig' %} {% block title %}Se connecter{% endblock %} {%
block content %}
<div class=" hauteur my-auto">
  <form method="post" class="d-flex row">
    <div class="col-md-5">
      {% if error %}
      <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
      {% endif %} {% if app.user %}
      <div class="mb-3">
        Vous êtes connecté en tant que {{ app.user.userIdentifier }},
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
      </div>
      {% endif %}

      <h1 class="h3 mb-3 font-weight-normal">Merci de vous connecter</h1>
      <label for="inputEmail" class="mt-3">Email</label>
      <input
        type="email"
        value="{{ last_username }}"
        name="email"
        id="inputEmail"
        class="form-control mt-2"
        placeholder="Votre email"
        autocomplete="email"
        required
        autofocus
      />
      <label for="inputPassword" class="mt-3">Mot de passe</label>
      <input
        type="password"
        name="password"
        id="inputPassword"
        class="form-control mt-2"
        placeholder="Votre mot de passe"
        autocomplete="current-password"
        required
      />

      <input
        type="hidden"
        name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
      />

      <!-- Uncomment this section and add a remember_me option below your firewall to
  activate remember me functionality. See
  https://symfony.com/doc/current/security/remember_me.html -->

      <!-- <div class="checkbox mb-3 mt-2">
        <label>
          <input type="checkbox" name="_remember_me" /> Se souvenir de moi
        </label>
      </div> -->

      <button class="btn btn-lg btn-outline-primary mt-4" type="submit">
        Se connecter
      </button>
    </div>

    <div class="col-md-1 brdr text-start"></div>

    <div class="col-md-6 text-center">
      <h1 class="h3">Je n'ai pas de compte</h1>
      <div class="compte">
        <a
          href="{{ path('app_register') }}"
          class="fs-5 link-underline link-underline-opacity-0 link-body-emphasis link-opacity-75-hover"
        >
          Je clique ici pour m'inscrire !
        </a>
      </div>
    </div>
  </form>
</div>

{% endblock %}
