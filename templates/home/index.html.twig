<div id="carouselExampleIndicators" class="carousel slide container py-5">
  <div class="carousel-indicators">
    <button
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide-to="0"
      class="active"
      aria-current="true"
      aria-label="Slide 1"
    ></button>
    <button
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide-to="1"
      aria-label="Slide 2"
    ></button>
    <button
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide-to="2"
      aria-label="Slide 3"
    ></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img
        src="{{ asset('assets/img/articles/salon.jpg') }}"
        class="d-block w-100 h-100"
        alt="..."
      />
    </div>
    <div class="carousel-item">
      <img
        src="{{ asset('assets/img/articles/lit2.jpg') }}"
        class="d-block w-100 h-100"
        alt="..."
      />
    </div>
    <div class="carousel-item">
      <img
        src="{{ asset('assets/img/articles/cuisine2.jpg') }}"
        class="d-block w-100 h-100"
        alt="..."
      />
    </div>
  </div>
  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#carouselExampleIndicators"
    data-bs-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#carouselExampleIndicators"
    data-bs-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div class="container py-3">
  <!-- 576px XS - > 576px S > 768px M > 992px L > 1200px XL -->

  {%block content %}

  <div class="row">
    {% for product in productsHome %}

    <div class="col-md-4 col-sm-6">
      <div class="card mb-4 shadow-sm">
        <a href="{{ path('app_product', { id: product.id }) }}">
          <img
            src="{{ asset('assets/img/articles/' ~ product.photo1) }}"
            alt="{{ product.alt1 }}"
            class="w-100"
          />
        </a>

        <div class="card-body">
          <h2 class="card-title fs-5">{{ product.name }}</h2>
          <p class="card-text d-flex flex-column align-items-lg-center">
            {{ product.description }}
            <span>{{ product.unitprice }}</span>
          </p>
          <a
            href="{{ path('add_to_cart', { id: product.id }) }}"
            class="btn border border-1"
            type="submit"
            ><i class="bi bi-cart2"></i
            ><span class="ps-2 fst-normal">Ajouter au panier</span></a
          >
        </div>
      </div>
    </div>

    {% endfor %}
  </div>
  {% endblock %}
  <div
    class="d-flex flex-column justify-content-center align-items-center py-4"
  >
    <p class="lead mb-5">
      <a
        href="{{ path('app_products') }}"
        class="btn border border-1 rounded-2 py-2 px-5"
        >Voir plus</a
      >
    </p>
  </div>
</div>
{% endblock %}
