{% extends 'base.html.twig' %} {% block title %}Compte{% endblock %} {% block
body %}
<section class="container">
  <div class="card">
    <h1>Mon compte</h1>
    <p>
      Bienvenue
      <span class="fw-bold"
        >{{ app.user.firstname }} {{ app.user.lastname }}</span
      >
      sur votre compte. <br />
    </p>

    <ul>
      <li><a href="">Modifier mon mot de passe</a></li>

      <li><a href="">Ajouter mes adresses</a></li>

      <li><a href="">Mes commandes</a></li>
    </ul>

    {% if 'ROLE_ADMIN' in app.user.roles %}
    <a href="{{ path('app_admin') }}" class="btn btn-primary"
      >Aller à l'administration</a
    >
    {% endif %} {% if app.user %}
    <div class="mt-3 text-center">
      <a
        href="{{ path('app_logout') }}"
        class="text-dark link-offset-2 link-underline link-underline-opacity-0"
        >Vous êtes connectés en tant que {{ app.user.userIdentifier }},
        <span
          class="link-offset-2 link-underline link-underline-opacity-0 link-body-emphasis link-opacity-50-hover"
          >se déconnecter</span
        ></a
      >
    </div>
    {% endif %}
  </div>
</section>
{% endblock %}
