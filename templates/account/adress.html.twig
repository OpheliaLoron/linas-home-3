{% extends 'base.html.twig' %} {% block title %}Mes adresses{% endblock %} {%
block content %}
<div class="container my-3">
  <a
    href="{{ path('app_account_adress_add') }}"
    class="btn btn-outline-primary btn-small float-right"
    >Ajouter une adresse</a
  >
  <h3>Mes adresses</h3>
  <p>C'est dans cet espace que vous allez pouvoir gérer vos adresses</p>
  <a href="{{ path('app_account') }}">Retour</a>
  <hr />
  {% if app.user.adresses|length == 0 %}
  <p class="text-center">
    Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour en
    ajouter une, veuillez
    <a href="{{ path('app_account_adress_add') }}">cliquez ici</a>
  </p>
  {% else %}
  <div class="row">
    {% for adress in app.user.adresses %}
    <div class="col-md-4">
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title">{{ adress.name }}</h5>
          <p class="card-text">
            {{ adress.adress }}, <br />
            {{ adress.zipcode }} - {{ adress.city }} - {{ adress.country }}
          </p>
          <a href="{{ path('app_account_adress_edit', { id: adress.id }) }}"
            >Modifier</a
          >
          | <a href="{{ path('app_account_adress_delete', { id: adress.id }) }}">Supprimer</a>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  {% for adress in app.user.adresses %} {% endfor %} {% endif %}
</div>
{% endblock %}
